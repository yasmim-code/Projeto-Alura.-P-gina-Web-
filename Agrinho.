let currentIndex = 0;

const infoDisplay = document.getElementById('info-display');
const prevBtn = document.getElementById('prev-btn');
const nextBtn = document.getElementById('next-btn');

function displayTip(index) {
    // Adiciona uma classe para iniciar a anima√ß√£o de "sa√≠da"
    infoDisplay.classList.add('fading-out');

    // Espera a anima√ß√£o de sa√≠da terminar antes de mudar o conte√∫do
    setTimeout(() => {
        const tip = ruralTips[index];
        infoDisplay.innerHTML = `
            <h2>${tip.title}</h2>
            <p>${tip.description}</p>
        `;
        // Remove a classe para iniciar a anima√ß√£o de "entrada"
        infoDisplay.classList.remove('fading-out');
    }, 300); // Tempo da transi√ß√£o CSS
}

// Estilo para a anima√ß√£o de fade
const style = document.createElement('style');
style.innerHTML = `
    .fading-out {
        opacity: 0;
        transform: translateY(20px);
    }
`;
document.head.appendChild(style);


// Event Listeners para os bot√µes de navega√ß√£o
nextBtn.addEventListener('click', () => {
    currentIndex = (currentIndex + 1) % ruralTips.length;
    displayTip(currentIndex);
});

prevBtn.addEventListener('click', () => {
    currentIndex = (currentIndex - 1 + ruralTips.length) % ruralTips.length;
    displayTip(currentIndex);
});

// Exibir a primeira dica ao carregar a p√°gina
displayTip(currentIndex);
